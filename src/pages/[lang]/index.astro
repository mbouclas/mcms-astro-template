---
import MainLayout from '../../layouts/main.astro';
import {Data} from '../../services/boot';
await Data.boot();
export async function getStaticPaths() {

const paths = Data.locales.map(({ astro, url, file, ...locale }) => {
    return {
      params: {
        lang: locale.code
      },
      props: {
        page: {
          locale: locale.code,

        }
      }
    };
});

return paths.filter(({ params }) => !!params.lang);
}


const {page} = Astro.props;
---

  <MainLayout>
<h1 class="font-bold text-black">Howdy {page.locale}</h1>
</MainLayout>